@model RegisterVM


<div class="container mx-auto">
    <div class="flex justify-center px-6 my-12">
        <!-- Row -->
        
            <!-- Col -->
            <div class=" lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
                <h3 class="pt-4 text-2xl text-center">Zarejestruj się</h3>
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["Error"]
                    </div>
                }
                <form class="px-8 pt-6 pb-8 mb-4 bg-white rounded" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-4 md:flex md:justify-between flex-column">
                        <label class="block mb-2 text-sm font-bold text-gray-700" asp-for="FullName">
                            Imię i nazwisko
                        </label>
                        <input
                            class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                            id="fullname"
                            type="text"
                            asp-for="FullName"
                            placeholder="Imię i nazwisko"/>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-4 md:flex md:justify-between flex-column">
                        <label class="block mb-2 text-sm font-bold text-gray-700" asp-for="Email">
                            Email
                        </label>
                        <input
                            class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                            id="email"
                            type="email"
                            asp-for="Email"
                            placeholder="Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-bold text-gray-700" asp-for="Password">
                            Hasło
                        </label>
                        <input
                            class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                            id="password"
                            type="password"
                            placeholder="******************"
                            asp-for="Password"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-bold text-gray-700" asp-for="RepeatPassword">
                            Powtórz hasło
                        </label>
                        <input
                            class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                            id="password"
                            type="password"
                            placeholder="******************"
                            asp-for="RepeatPassword"/>
                        <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-6 text-center">
                        <input
                            class="w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline"
                            type="submit"
                            value="Zarejestruj się"/>
                    </div>
                    <hr class="mb-6 border-t"/>
                    <div class="text-center">
                        <a
                            class="inline-block text-sm text-blue-500 align-baseline hover:text-blue-800"
                            asp-action="Login">
                            Masz ju konto? Zaloguj się!
                        </a>
                    </div>
                </form>
            </div>
       
    </div>
</div>